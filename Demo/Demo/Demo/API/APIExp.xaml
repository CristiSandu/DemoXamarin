<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo.API.APIExp">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Turn Flash Light!"/>
            <Switch x:Name="enableFlash" PropertyChanged="enableFlash_PropertyChanged"/>
            <StackLayout>
                <Label x:Name="locationLabel" />
                <Button x:Name="getLocation" Text="GetLocation" Clicked="getLocation_Clicked" />
            </StackLayout>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>